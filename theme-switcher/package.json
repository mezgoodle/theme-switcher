{
  "name": "theme-switcher",
  "displayName": "Theme Switcher",
  "description": "Automatic theme change according to the schedule",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "theme-switcher.switchTheme",
        "title": "Switch Theme"
      },
      {
        "command": "theme-switcher.forceCheck",
        "title": "Force Check Theme"
      }
    ],
    "configuration": {
      "title": "Theme Switcher",
      "properties": {
        "themeSwitcher.lightTheme": {
          "type": "string",
          "description": "The light theme to use."
        },
        "themeSwitcher.darkTheme": {
          "type": "string",
          "description": "The dark theme to use."
        },
        "themeSwitcher.startTime": {
          "type": "integer",
          "description": "The hour to switch to the light theme (0-23)."
        },
        "themeSwitcher.endTime": {
          "type": "integer",
          "description": "The hour to switch to the dark theme (0-23)."
        },
        "themeSwitcher.firstRun": {
          "type": "boolean",
          "default": true,
          "description": "Indicates whether the extension has been run for the first time."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
